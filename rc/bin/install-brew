#!/bin/bash

set -eu

#######################################
# install brew and its dependencies
# Arguments:
#   None
# Returns:
#   1 if dependencies can not be met or brew installer errors
#######################################
main () {
  # shellcheck disable=SC1090,SC1091
  . exit-stderr.sh; . print.sh

  yes yes | bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
}

main "$@"
