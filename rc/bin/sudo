#!/bin/sh

set -eu

#######################################
# sudo wrapper when no sudo is installed
# Globals:
#   SUDOC       sudo command path
# Arguments:
#   sudo arguments
#######################################
main () {
  SUDOC="${SUDOC:-/usr/bin/sudo}"
  if [ "${SUDOC}" ] && [ "${1-}" = '-S' ] && [ "${PASSWORD-}" ]; then
    echo "${PASSWORD}" | exec "${SUDOC}" "$@"
  elif [ "${SUDOC}" ]; then
    exec "${SUDOC}" "$@"
  else
    case "${1-}" in -K|-S) shift ;; esac
    "$@"
  fi
}

main "$@"
