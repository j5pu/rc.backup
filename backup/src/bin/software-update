#!/bin/bash

#######################################
# labels to be updated
# Globals:
#   MACOS
# Arguments:
#   None
#######################################
labels () {
  labels="$(sudo softwareupdate -l | awk -v p='.* Label: ' '$0 ~ p { gsub(p, ""); print $0 }')"
  [ "${labels-}" ] && echo "${labels}"
}

#######################################
# updates software
# Globals:
#   MACOS
# Arguments:
#   None
#######################################
main() {
  local i
  if $MACOS; then
    # shellcheck disable=SC1090,SC1091
    . exit-stderr.sh; . print.sh

    while labels; do
      while read -r i; do
        >&2 sudo softwareupdate --install "${i}"
        print Software Update: "${i}"
      done <<<"${labels}"
    done
  fi
}

main "$@"
